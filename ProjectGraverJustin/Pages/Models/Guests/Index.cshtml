@page
@model ProjectGraverJustin.Pages.Models.Guests.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/css/table.css">

<h1>Guest List</h1>
<img src="~/Images/Waiting_room_hospital.png" id="photo" />
<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TblGuest[0].GuestLastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TblGuest[0].GuestFirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TblGuest[0].GuestDoB)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TblGuest[0].GuestSignIn)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.TblGuest) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GuestLastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GuestFirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GuestDoB)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GuestSignIn)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.GuestId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.GuestId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.GuestId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
